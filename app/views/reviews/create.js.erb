$(function(){
  $(".review-form").val("");
  $("#review-error").remove();
  $("#reviewModal").modal("hide");
  $("#flash-message").html("<%= j(render "shared/flash") %>");
  $("#shop-avg-rate").html("<%= j(render "shared/star_rate", shop_id: @shop_id, reviews: @reviews) %>");
  $("#shop-review-content").html("<%= j(render"reviews", reviews: @reviews) %>");
})
