<% reviews.each do |review| %>
  <div id="rv-wrapper-<%= review.id %>">
    <h5 id="rv-title-<%= review.id %>"><%= review.title %></h5>
    <p id="rv-comment-<%= review.id %>"><%= safe_join(review.comment.split("\n"),tag(:br)) %></p>
    <%= link_to "削除", review_path(review), data: { confirm: '削除しますか?' }, method: :delete, remote: true %>
  </div>
<% end %>