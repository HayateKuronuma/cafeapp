<% provide(:title, "アカウント登録") %>
<div class="user-main-wrapper d-md-flex">
  <div class="split-column left-column">
    <div class="container">
      <div class="form-wrapper">
        <h2>アカウント登録</h2>
        <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="field">
            <%= f.label :name %>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
          </div>
          <div class="field">
            <%= f.label :email %>
            <%= f.email_field :email, autocoimplete: "email", class: "form-control" %>
          </div>
          <div class="field">
            <%= f.label :password %>
            <em>(8文字以上 英数字混合)</em>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>
          <div class="field">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>
          <div class="actions my-3">
            <%= f.submit "新規登録", class: "btn-primary btn md-btn" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
  <div class="split-column right-column">
    <div class="container">
      <div class="guest-login-wrapper justify-content-center">
        <h2>ゲストとしてログイン</h2>
        <%= link_to "ゲストログイン", users_guest_sign_in_path, method: :post, class: "btn btn-primary md-btn" %>
      </div>
    </div>
  </div>
  <p class="center-or">OR</p>
</div>
