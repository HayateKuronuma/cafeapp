<div class="home-wrapper">
  <div class="container">
    <div id='map'></div>
    <div class="search-btn-wrapper">
      <button class="search-btn btn" id="search-btn">愛犬と行ける飲食店を検索</button>
      <div id="status" class="hidden">
        <%= image_tag "/running_dog.gif" %>
        <p>Locating...</p>
      </div>
    </div>
    <div id="show_search_error"></div>
    <div id="show_result"></div>
  </div>
</div>
<%= javascript_pack_tag 'initmap', 'data-turbolinks-track': 'reload' %>
<script>
  if(window.google){
    globalinitMap();
  } else{
    $.ajax('https://maps.googleapis.com/maps/api/js?key=<%= Rails.application.credentials.api[:google_map_api] %>&callback=globalinitMap', {
      dataType: 'script'
    });
  }
</script>
