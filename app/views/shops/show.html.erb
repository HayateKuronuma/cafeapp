<div class="main-wrapper">
  <div class="container" >
    <div class="shop-header-contents">
      <div class="shop-header-contents-inner">
        <div class="logo-title-wrapper">
          <div class="header-logo">
            <%= image_tag @shop["logo_image"], class: "logo-image", alt: "#{@shop["name"]}のロゴ" %>
          </div>
          <div class="shoptitle">
            <span class="title-crown"><%= @shop["genre"]["catch"] %></span>
            <h3 class="shop-name"><%= @shop["name"] %></h3>
          </div>
        </div>
        <div class="shop-headerbtn-wrapper">
          <%= link_to "お気に入りに保存", @shop["urls"]["pc"], class: "btn favorite-btn" %>
          <%= link_to "HOT PEPPERで見る", @shop["urls"]["pc"], class: "btn btn-primary hotpepper-btn" %>
        </div>
      </div>
      <div class="shop-header-info">
        <ul class="shop-header-infoinner">
          <li>
            <dl>
              <dt>最寄駅：</dt>
              <dd><%= @shop["station_name"] %></dd>
            </dl>
          </li>
          <li>
            <dl>
              <dt>ジャンル：</dt>
              <dd><%= @shop["genre"]["name"] %></dd>
            </dl>
          </li>
          <li>
            <dl>
              <dt> 定休日：</dt>
              <dd><%= @shop["close"] %></dd>
            </dl>
            <dl>
              <dt>

              </dt>
            </dl>
          </li>
        </ul>
      </div>
    </div>
    <div class="shop-review-content">
      <div class="shop-review-frame"> 
        <div class="shop-review-title">
          <%= image_tag "/review-image.png" %>
          <h5>みんなの口コミ</h5>
        </div>
        <div class="review-wrapper">
          <div class="review-inner">
            <p>現在クチコミはありません</p>
            <%= link_to "口コミを投稿する", root_path, class: "btn-primary btn" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
